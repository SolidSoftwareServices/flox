@using EI.RP.UiFlows.Mvc.Components.PreLoad

@model EI.RP.WebApp.Flows.AppFlows.Accounts.Components.AccountsSubNavigation.ViewModel

@functions
{
    enum PageComponent
    {
        SubNavigation = 1,
    }
}

@{
    var componentPreLoader = new ComponentPreLoader<PageComponent>(Component, Model.ScreenModel);

    if (Model.IsMultiPageView)
    {
        componentPreLoader.StartLoading<EI.RP.WebApp.Flows.SharedFlowComponents.Main.SubNavigation.Component>(PageComponent.SubNavigation,
            new EI.RP.WebApp.Flows.SharedFlowComponents.Main.SubNavigation.InputModel
            {
                NavigationItems = Model.NavigationItems
            });
    }
}

@if (Model.IsMultiPageView)
{
    @await componentPreLoader.Render(PageComponent.SubNavigation)
}
