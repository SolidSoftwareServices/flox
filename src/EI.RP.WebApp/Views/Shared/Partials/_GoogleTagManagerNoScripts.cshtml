@using Microsoft.AspNetCore.Hosting
@using EI.RP.CoreServices.DeliveryPipeline.Environments
@using EI.RP.CoreServices.Platform
@using EI.RP.WebApp.Infrastructure.Settings

@inject IGoogleSettings googleSettings

@if (googleSettings.IsTagManagerEnabled)
{
    <noscript data-testid="google-tagmanager-no-script">

        <iframe src="@googleSettings.TagManagerUrl"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>

    </noscript>
}
