
@using S3.App.Flows
@using S3.App.Infrastructure
@using S3.App.Flows.AppFlows.BlueFlow.Steps.FillData
@using S3.UiFlows.Mvc.Views

@model S3.App.Flows.AppFlows.BlueFlow.Steps.FillData.StepAScreen.StepAScreenScreenModel

@{
	ViewData["Title"] = "BlueFlow::StepAScreen";
}
<div id="BlueFlowPage">
	<div class="row">
		<div class="col-md-3">
			<h2>Process BlueFlow::StepAScreen</h2>
		</div>
	</div>
	@using (await Html.BeginUiFlowFormAsync( Model))
	{
		
		<div class="row">
			<div class="col-md-3">
				<b>Introduce value</b>
				@Html.TextBoxFor(m => m.StepAValue1)
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<flow-action trigger-event=@StepAScreen.ScreenInputEvent.Previous>Previous</flow-action>
				<flow-action trigger-event=@StepAScreen.ScreenInputEvent.Next>Next</flow-action>
				<flow-action trigger-event=@StepAScreen.ScreenInputEvent.Reset>Reset</flow-action>
			</div>
		</div>
	}
	<div class="row">
		<div class="col-md-3">
			@Html.ValidationSummary()
		</div>
	</div>
	</div>