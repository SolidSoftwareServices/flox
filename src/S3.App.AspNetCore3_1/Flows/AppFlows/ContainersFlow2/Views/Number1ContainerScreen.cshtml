@{
	ViewData["Title"] = "Containers 2 sample Number1Step";
}


@using S3.App.AspNetCore3_1.Flows.AppFlows
@using S3.App.AspNetCore3_1.Flows.AppFlows.ContainersFlow2.Steps
@using S3.UiFlows.Mvc.Components
@using S3.App.AspNetCore3_1.Infrastructure
@model S3.UiFlows.Core.Flows.Screens.Models.UiFlowScreenModel

<div id="Containers2FlowPage">
	<div class="row">
		<div class="col-md-3">
			<h2>Containers 2 sample Number1Step</h2>
		</div>
	</div>

	@foreach (var flowType in Enum.GetValues(typeof(SampleAppFlowType)).Cast<SampleAppFlowType>().Where(x => x != SampleAppFlowType.NoFlow))
	{
		if (flowType != Model.GetContainedFlow<SampleAppFlowType>())
		{
			<flow-action action-type="StartFlow"
			             flow-name="@flowType"
			             flow-location="ContainedInMe">@flowType.ToString()</flow-action>
			<b>||</b>
		}
	}

	<div id="contained-part" style="background-color: yellowgreen; margin-left: 30px;">
		<vc:embedded-flow input="@(new EmbeddedFlowComponent.ComponentParameters {Model = Model})"/>
	</div>
	@using (await Html.BeginUiFlowFormAsync( Model))
	{
		<div class="row">
			<div class="col-md-3">
				<flow-action id="containerNext" trigger-event=@Number1ContainerScreen.StepEvent.Step2>Next</flow-action>
			</div>
		</div>
	}
</div>