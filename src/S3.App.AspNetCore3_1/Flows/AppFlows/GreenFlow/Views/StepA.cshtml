
@using S3.App.AspNetCore3_1.Flows
@using S3.App.AspNetCore3_1.Flows.AppFlows
@using S3.App.AspNetCore3_1.Flows.AppFlows.GreenFlow.Steps
@using S3.App.AspNetCore3_1.Infrastructure

@model S3.App.AspNetCore3_1.Flows.AppFlows.GreenFlow.Steps.StepAScreen.StepAScreenScreenModel

@{
	ViewData["Title"] = "GreenFlow::StepAScreen";
}
<div id="GreenFlowPage">
	<div class="row">
		<div class="col-md-3">
			<h2>Process GreenFlow::StepAScreen</h2>
		</div>
	</div>
	@using (await Html.BeginUiFlowFormAsync( Model))
	{

	
		<div class="row">
			<div class="col-md-3">
				<b>Introduce value</b>
				@Html.TextBoxFor(m => m.StepAValue1)
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<flow-action trigger-event=@StepAScreen.StepEvent.Previous>Previous</flow-action>
				<flow-action trigger-event=@StepAScreen.StepEvent.Next>Next</flow-action>
				<flow-action trigger-event=@StepAScreen.StepEvent.Reset>Reset</flow-action>
			</div>
		</div>
	}
	<div class="row">
		<div class="col-md-3">
			@Html.ValidationSummary()
		</div>
	</div>
</div>
