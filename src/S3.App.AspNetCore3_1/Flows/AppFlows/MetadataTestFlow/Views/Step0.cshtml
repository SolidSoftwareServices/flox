@using System.Linq.Expressions
@using Microsoft.AspNetCore.Html
@using S3.App.Flows.AppFlows.MetadataTestFlow.Steps
@model S3.App.Flows.AppFlows.MetadataTestFlow.Steps.Step0Screen.InitialScreenScreenModel
@{
	ViewData["Title"] = "MetadataTestFlowPage::Step0";
}

@functions{
	
		IHtmlContent AddRow<TProperty>(Expression<Func<Step0Screen.InitialScreenScreenModel, TProperty>> expression) 
		{
			return Html.Raw($"<div class=\"row\"><div class=\"col-md-6\">{@Html.LabelFor(expression)}:{Html.ValueFor(expression)}</div></div>");
		}
}

<div id="MetadataTestFlowPage">

	<div class="row">
		<div class="col-md-6">
			<h2>MetadataTestFlowPage::Step 0</h2>
		</div>
	</div>
	
	@AddRow(m => m.FlowHandler)
	@AddRow(m => m.FlowScreenName)
	

</div>